<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rams.passportautomationsystem.signUp2Activity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checksex"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="34dp"
        android:text="Phone" />

    <EditText
        android:id="@+id/udphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_centerVertical="true"
        android:text="Gender" />

    <RadioGroup
        android:id="@+id/checksex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/udphone"
        android:layout_centerVertical="true"
        android:layout_marginStart="37dp">

        <RadioButton
            android:id="@+id/maleradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:text="Male"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/femaleradio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:baselineAligned="false"
            android:checked="false"
            android:text="Female"
            android:textSize="18sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checksex"
        android:layout_marginStart="14dp"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@+id/textView4"
        android:text="Submitted Documents for the verification " />

    <CheckBox
        android:id="@+id/isAadhaar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="33dp"
        android:text="Aadhaar Card" />

    <CheckBox
        android:id="@+id/isPan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/isAadhaar"
        android:layout_alignBottom="@+id/isAadhaar"
        android:layout_alignStart="@+id/udphone"
        android:layout_marginStart="16dp"
        android:text="Pan No" />

    <CheckBox
        android:id="@+id/isVoter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/isPan"
        android:layout_alignBottom="@+id/isPan"
        android:layout_toEndOf="@+id/checksex"
        android:text="Voter ID" />

    <CheckBox
        android:id="@+id/isbirthcer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/isAadhaar"
        android:layout_below="@+id/isAadhaar"
        android:layout_marginTop="14dp"
        android:text="Birth Certificate" />

    <Button
        android:id="@+id/Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:text="login details" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/udphone"
        android:layout_marginTop="59dp"
        android:text="Applicant Details-2" />
</RelativeLayout>
