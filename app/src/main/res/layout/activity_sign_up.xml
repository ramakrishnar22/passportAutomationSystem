<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rams.passportautomationsystem.signUpActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/udname"
        android:layout_alignBottom="@+id/udname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:text="Name" />

    <EditText
        android:id="@+id/udname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/udname"
        android:layout_marginTop="54dp"
        android:text="Aadhaar No:" />

    <EditText
        android:id="@+id/udadno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignEnd="@+id/udname"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/uddob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/udadno"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/uddob"
        android:layout_alignStart="@+id/textView10"
        android:text="DOB" />

    <EditText
        android:id="@+id/udadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/uddob"
        android:layout_below="@+id/uddob"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/udadd"
        android:layout_alignStart="@+id/textView11"
        android:text="Address" />

    <Button
        android:id="@+id/btnnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/udadd"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="53dp"
        android:text="Next ->" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/udname"
        android:layout_marginTop="29dp"
        android:text="Applicant Details" />

</RelativeLayout>
